{
	"name": "alkes-store",
	"module": "src/server.ts",
	"type": "module",
	"scripts": {
		"build": "bun install && bun copy-env && bun generate-token",
		"dev": "bun run build && bun --watch src/server.ts",
		"lint": "eslint '**/*.ts'",
		"copy-env": "bun -e \"const fs = require('fs'); fs.copyFileSync('.env.example', '.env');\" || cp .env.example .env",
		"generate-token": "bun src/Common/token/generator.token.ts"
	},
	"devDependencies": {
		"@eslint/js": "^9.9.0",
		"@types/auto-bind": "^2.1.0",
		"@types/bcrypt": "^5.0.2",
		"@types/bun": "latest",
		"@types/pg": "^8.11.6",
		"@types/uuid": "^10.0.0",
		"eslint": "^9.9.0",
		"globals": "^15.9.0",
		"typescript-eslint": "^8.1.0"
	},
	"peerDependencies": {
		"typescript": "latest"
	},
	"dependencies": {
		"@hapi/hapi": "^21.3.10",
		"@hapi/jwt": "^3.2.0",
		"auto-bind": "^5.0.1",
		"bcrypt": "^5.1.1",
		"hapi-cors": "^1.0.3",
		"hapi-rate-limit": "^7.1.0",
		"ioredis": "^5.4.1",
		"joi": "^17.13.3",
		"pg": "^8.12.0",
		"uuid": "^10.0.0"
	}
}
